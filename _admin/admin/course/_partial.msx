                <thead>
                <tr>
                  <th>Tên khóa học</th>
                  <th>Cấp độ</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
                {(ctrl.fetchCourses.ready() && ctrl.fetchCates.ready() && ctrl.fetchSofts.ready())?[
                      ctrl.courses().map(function(course){
