        style.
            .note-editable{
                min-height: 1000px;
            }
            .modal-content-wrapper{
                overflow-y: auto;
            }
            .note-editable img {
                width: 100% !important;
                height: auto !important;
            }
            .container-fluid2 {
                width: 100% !important;
                padding: 0 !important;
            }
            .block {
                background: rgba(30, 30, 30, 0.5);
                width: 150px;
                height: 150px;
                border-radius: 5px;
                margin: 5px;
                overflow: auto;
                cursor: pointer;
            }
            .blog img {
                width: 150px;
                height: auto;
            }
            .flex-container {
                border: 1px solid #ddd;
                display: -webkit-flex; /* Safari */
                display: flex;
                -webkit-flex-wrap: wrap; /* Safari */
                flex-wrap: wrap;
                -webkit-justify-content: center; /* Safari */
                justify-content: center;
            }
            table tr:nth-child(odd) td{
                background: #eee !important;
                padding-top: 5px !important;
                padding-bottom: 5px !important;
            }
            table tr td{
                padding-top: 5px !important;
                padding-bottom: 5px !important;
            }
            table tr p{
                padding-bottom: 0px !important;
            }
            .drag-n-drop ol {
                list-style: none;
                border: 1px solid #ddd;
                padding-left: 0px;
            }
            .drag-n-drop ol li {
                padding: 5px;
                line-height: 40px;
                height: 45px;
            }
            .drag-n-drop ol li:nth-child(odd) {
                background: #eee;
            }
            .drag-n-drop ol li:hover {
                background: lightblue;
            }
            .dragging{
                background: blue !important;
            }
            .select-list:hover {
                cursor: pointer;
                background: lightseagreen;
            }
            .drag-n-drop .active {
                background: steelblue !important;
                color: red;
            }
            .note-group-select-from-files label, .note-group-select-from-files input {
                display: none;
            }
            .side-menu a {
                line-height: 40px;
            }
            .sub-menu > li, .sub-menu > li > a{
                height: 30px;
            }
            .sub-menu {
                margin: 0 !important;
                padding: 0 0 10px 0 !important;
            }
            .icon-thumbnail {
                display: none;
            }